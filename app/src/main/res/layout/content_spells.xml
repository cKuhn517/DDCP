<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SpellsActivity"
    tools:showIn="@layout/activity_spells">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rest"
        android:id="@+id/button_spells_rest"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/button_spells_add"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button_spells_rest" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List"
        android:id="@+id/button_spells_list"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button_spells_add" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView_spells_casting"
        android:layout_below="@+id/button_spells_rest"
        android:layout_alignParentStart="true" />
</RelativeLayout>
