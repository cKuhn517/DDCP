        android:layout_toLeftOf="@+id/imageView_char_portrait"
        android:layout_marginRight="4dp"
        android:max="100"
        android:progress="50"
        android:indeterminate="false"
        android:layout_toStartOf="@+id/imageView_char_portrait"
        android:progressBackgroundTint="#ffdddddd"
        android:progressTint="#ff7bc043" />
    -->
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/progressBar_char_home_xp"
        android:layout_alignBottom="@+id/textView_char_home_xp"
        android:layout_alignTop="@+id/textView_char_home_xp"
        android:layout_toEndOf="@+id/textView_char_home_xp"
        android:layout_alignLeft="@+id/textView_char_home_xp_have"
        android:layout_toLeftOf="@+id/imageView_char_portrait"
        android:layout_marginRight="4dp"
        android:max="100"
        android:progress="50"
        android:indeterminate="false"
        android:layout_toStartOf="@+id/imageView_char_portrait"
        android:progressDrawable="@drawable/greenprogress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="nHave"
        android:id="@+id/textView_char_home_xp_have"
        android:layout_alignBottom="@+id/textView_char_home_xp"
        android:layout_toEndOf="@+id/textView_char_home_xp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="/"
        android:id="@+id/textView_char_home_xpSlash"
        android:layout_alignBottom="@+id/textView_char_home_xp_have"
        android:layout_toEndOf="@+id/textView_char_home_xp_have" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="nNeed"
        android:id="@+id/textView_char_home_xp_need"
        android:layout_alignBottom="@+id/textView_char_home_xpSlash"
        android:layout_toEndOf="@+id/textView_char_home_xpSlash" />



    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+XP"
        android:id="@+id/button_char_home_add_xp"
        android:onClick="addXPButton"
        android:layout_above="@+id/textView_char_home_hp"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/editText_char_home_xp_amount"
        android:layout_alignBottom="@+id/button_char_home_add_xp"
        android:layout_toEndOf="@+id/button_char_home_add_xp"
        android:layout_toStartOf="@+id/imageView_char_portrait" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="HP: "
        android:id="@+id/textView_char_home_hp"
        android:layout_above="@+id/imageView"
        android:layout_toStartOf="@+id/progressBar_char_home_xp" />

    <!--<ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar_char_home_hp"
        android:layout_marginRight="4dp"
        android:max="100"
        android:progress="50"
        android:indeterminate="false"
        android:progressBackgroundTint="#ffdddddd"
        android:layout_alignBottom="@+id/textView_char_home_hp"
        android:layout_toEndOf="@+id/textView_char_home_xp"
        android:layout_toStartOf="@+id/imageView_char_portrait"
