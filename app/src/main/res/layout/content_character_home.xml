<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/char_home_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CharacterHomeActivity"
    tools:showIn="@layout/activity_character_home">

    <ImageView
        android:layout_width="170dp"
        android:layout_height="220dp"
        android:id="@+id/imageView_char_portrait"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:outlineProvider="bounds"
        android:background="#55000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/char_name"
        android:id="@+id/textView_char_name"
        android:textSize="30dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/imageView_char_portrait"
        android:capitalize="characters"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/char_race_class"
        android:id="@+id/textView_char_race"
        android:layout_below="@+id/textView_char_name"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/imageView_char_portrait"
        android:textAlignment="center"
        android:layout_centerInParent="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lvl: "
        android:id="@+id/textView_char_home_lvl"
        android:layout_above="@+id/textView_char_home_xp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Num"
        android:id="@+id/textView_char_home_lvl_val"
        android:layout_alignBottom="@+id/textView_char_home_lvl"
        android:layout_toEndOf="@+id/textView_char_home_lvl" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="XP: "
        android:id="@+id/textView_char_home_xp"
        android:layout_above="@+id/button_char_home_add_xp"
        android:layout_alignParentStart="true" />

    <!--<ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar_char_home_xp"
        android:layout_alignBottom="@+id/textView_char_home_xp"
        android:layout_alignTop="@+id/textView_char_home_xp"
