        android:layout_alignLeft="@+id/textView_char_home_hp_cur"
        android:layout_toLeftOf="@+id/imageView_char_portrait"
        android:progressTint="#77ee4035" /> -->

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/progressBar_char_home_hp"
        android:layout_marginRight="4dp"
        android:max="100"
        android:progress="50"
        android:indeterminate="false"
        android:layout_alignBottom="@+id/textView_char_home_hp"
        android:layout_toEndOf="@+id/textView_char_home_xp"
        android:layout_toStartOf="@+id/imageView_char_portrait"
        android:layout_alignTop="@+id/textView_char_home_hp"
        android:layout_alignLeft="@+id/textView_char_home_hp_cur"
        android:layout_toLeftOf="@+id/imageView_char_portrait"
        android:progressDrawable="@drawable/redprogress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cur"
        android:id="@+id/textView_char_home_hp_cur"
        android:layout_alignTop="@+id/textView_char_home_hp"
        android:layout_toEndOf="@+id/textView_char_home_hp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="/"
        android:id="@+id/textView_char_home_hpSlash"
        android:layout_alignTop="@+id/textView_char_home_hp_cur"
        android:layout_toEndOf="@+id/textView_char_home_hp_cur" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Max"
        android:id="@+id/textView_char_home_hp_max"
        android:layout_alignTop="@+id/progressBar_char_home_hp"
        android:layout_toEndOf="@+id/textView_char_home_hpSlash" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/imageView_char_portrait"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="#ff000000"
        android:layout_marginTop="6dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spells"
        android:id="@+id/button_char_home_spells"
        android:onClick="cHome_spells"
        android:layout_below="@+id/button_char_home_char_sheet"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Character Sheet"
        android:id="@+id/button_char_home_char_sheet"
        android:layout_below="@+id/imageView"
        android:onClick="cHome_charSheet"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Mode"
        android:id="@+id/button_char_home_play_mode"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="56dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lvl Up!"
        android:id="@+id/button_char_home_lvlup"
        android:layout_toEndOf="@id/textView_char_home_lvl_val"
        android:layout_alignBottom="@+id/textView_char_home_lvl_val"
        android:visibility="gone"
        android:onClick="cHome_lvlUp"/>


</RelativeLayout>
