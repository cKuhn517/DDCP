<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/char_home_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ck.dndcopilot.CharacterHome"
    tools:showIn="@layout/activity_character_home">

    <ImageView
        android:layout_width="170dp"
        android:layout_height="220dp"
        android:id="@+id/imageView_char_portrait"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:outlineProvider="bounds"
        android:background="#55000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/char_name"
        android:id="@+id/textView_char_name"
        android:textSize="30dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/imageView_char_portrait"
        android:capitalize="characters"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/char_race_class"
        android:id="@+id/textView_char_race"
        android:layout_below="@+id/textView_char_name"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/imageView_char_portrait"
        android:textAlignment="center"
        android:layout_centerInParent="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lvl: "
        android:id="@+id/textView_char_home_lvl"
        android:layout_below="@+id/textView_char_race"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:id="@+id/progressBar"
        android:max="100"
        android:progress="100"
        android:clickable="false"
        android:background="#ff000000"
        android:layout_below="@+id/imageView_char_portrait"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Num"
        android:id="@+id/textView_char_home_lvl_val"
        android:layout_alignBottom="@+id/textView_char_home_lvl"
        android:layout_toEndOf="@+id/textView_char_home_lvl" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="XP: "
        android:id="@+id/textView_char_home_xp"
        android:layout_below="@+id/textView_char_home_lvl"
        android:layout_alignParentStart="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar_char_home_xp"
        android:layout_alignBottom="@+id/textView_char_home_xp"
        android:layout_alignTop="@+id/textView_char_home_xp"
        android:layout_toEndOf="@+id/textView_char_home_xp"
        android:layout_alignLeft="@+id/textView_char_home_xp_have"
        android:layout_toLeftOf="@+id/imageView_char_portrait"
        android:layout_marginRight="4dp"
        android:max="100"
        android:progress="100"
        android:indeterminate="false"
        android:layout_toStartOf="@+id/imageView_char_portrait"
        android:progressBackgroundTint="#7bc043"
        android:background="#777bc043" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="nHave"
        android:id="@+id/textView_char_home_xp_have"
        android:layout_alignBottom="@+id/textView_char_home_xp"
        android:layout_toEndOf="@+id/textView_char_home_xp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="/"
        android:id="@+id/textView_char_home_xpSlash"
        android:layout_alignBottom="@+id/textView_char_home_xp_have"
        android:layout_toEndOf="@+id/textView_char_home_xp_have" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="nNeed"
        android:id="@+id/textView_char_home_xp_need"
        android:layout_alignBottom="@+id/textView_char_home_xpSlash"
        android:layout_toEndOf="@+id/textView_char_home_xpSlash" />



    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+XP"
        android:id="@+id/button_char_home_add_xp"
        android:layout_below="@+id/textView_char_home_xp"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_alignBottom="@+id/button_char_home_add_xp"
        android:layout_toEndOf="@+id/button_char_home_add_xp"
        android:layout_toStartOf="@+id/imageView_char_portrait" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="HP: "
        android:id="@+id/textView_char_home_hp"
        android:layout_below="@+id/button_char_home_add_xp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cur"
        android:id="@+id/textView_char_home_hp_cur"
        android:layout_below="@+id/button_char_home_add_xp"
        android:layout_toEndOf="@+id/textView_char_home_hp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="/"
        android:id="@+id/textView_char_home_hpSlash"
        android:layout_alignTop="@+id/textView_char_home_hp_cur"
        android:layout_toEndOf="@+id/textView_char_home_hp_cur" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Max"
        android:id="@+id/textView_char_home_hp_max"
        android:layout_below="@+id/editText"
        android:layout_toEndOf="@+id/textView_char_home_hpSlash" />


</RelativeLayout>
